assets-path = 'http://ankor-center.ru/email'
base-font-size = 14px
line-color = #eeeeee
link-color = #00a0e3
link-color-hover = darken(link-color, 10%)
header-logo-width = 124px
header-logo-height = 39px

@import '_fonts'

body, table.body, h1, h2, h3, h4, h5, h6, p, td
  color text-color
  font-family "Circe", "Helvetica", "Arial", sans-serif
  font-weight normal
  font-size base-font-size
  padding 0
  margin 0
  text-align left
  line-height 1.3

a
  color link-color !important
  &:hover
    color link-color-hover !important


.text-left
  text-align: left

.text-center
  text-align: center

.text-right
  text-align: right

table.row.app-header
  border-bottom 1px solid line-color
  margin-bottom 20px
  padding-top 10px
  padding-bottom 10px

table.row.app-footer
  margin-top 10px
  padding-top: 10px
  padding-bottom: 20px
  border-top 1px solid line-color


table.row.app-footer-content
  margin-bottom 10px


.app-content-block
  margin-bottom: 20px

table[class="body"]
  img.app-header-logo
    width header-logo-width !important
    height header-logo-height !important



